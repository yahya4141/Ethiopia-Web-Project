@model IEnumerable<InternetProg.Models.Kullanici>

@{
    ViewBag.Title = "Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-people-fill"></i> Kullanıcı Listesi</h4>
            <span class="badge bg-primary text-white">Toplam Üye: @Model.Count()</span>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Ad Soyad</th>
                            <th>E-Posta</th>
                            <th>Mevcut Rol</th>
                            <th>Rol Değiştir</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-bold text-primary">@item.Ad @item.Soyad</td>
                                <td>@item.Email</td>
                                <td>
                                    @if (item.Rol == "Admin")
                                    {
                                        <span class="badge bg-danger rounded-pill">Yönetici</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark rounded-pill">Üye</span>
                                    }
                                </td>
                                <td>
                                    @using (Html.BeginForm("RolGuncelle", "Manage", FormMethod.Post, new { @class = "d-flex gap-2" }))
                                    {
                                        <input type="hidden" name="id" value="@item.Id" />

                                        <select name="yeniRol" class="form-select form-select-sm" style="width: 120px; cursor: pointer;">
                                            <option value="Uye" @(item.Rol == "Uye" ? "selected" : "")>Üye</option>
                                            <option value="Admin" @(item.Rol == "Admin" ? "selected" : "")>Admin</option>
                                        </select>

                                        <button type="submit" class="btn  btn-success" title="Kaydet">
                                            <i class="bi bi-check-lg"></i>Kaydet
                                        </button>
                                    }
                                </td>
                                <td class="text-end">
                                    <a href="@Url.Action("KullaniciSil", "Manage", new { id = item.Id })"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('@item.Ad @item.Soyad isimli kullanıcıyı silmek istediğinize emin misiniz?');">
                                        <i class="bi bi-trash-fill"></i> Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>