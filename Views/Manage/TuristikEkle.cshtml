@model InternetProg.Models.TuristikYer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Turistik Yer Ekle</h3>
<hr />

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("TuristikEkle", "Manage", FormMethod.Post))
        {
            <div class="mb-3">
                <label>Yer Adı</label>
                @Html.TextBoxFor(m => m.YerAdi, new { @class = "form-control", required = "required" })
            </div>

            <div class="mb-3">
                <label>Resim URL</label>
                @Html.TextBoxFor(m => m.ResimUrl, new { @class = "form-control" })
            </div>

            <div class="mb-3">
                <label>Açıklama</label>
                @Html.TextAreaFor(m => m.Aciklama, new { @class = "form-control", rows = "4", required = "required" })
            </div>

            <button type="submit" class="btn btn-success">Kaydet</button>
        }
    </div>
</div>