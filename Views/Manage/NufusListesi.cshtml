@model List<InternetProg.Models.NufusBilgi>
@{
    ViewBag.Title = "Nüfus Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3>📊 Nüfus Bilgileri</h3>
    <a href="/Manage/NufusEkle" class="btn btn-primary">+ Yeni Veri Ekle</a>
</div>

<table class="table table-hover table-bordered shadow-sm bg-white">
    <thead class="table-dark">
        <tr>
            <th>Yıl</th>
            <th>Nüfus Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Yil</td>
                <td>@item.NufusSayisi</td>
                <td>
                    <a href="/Manage/NufusSil/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bu kaydı silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">Henüz nüfus verisi eklenmemiş.</div>
}