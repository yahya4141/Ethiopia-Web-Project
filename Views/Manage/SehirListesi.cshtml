@model List<InternetProg.Models.Sehir>
@{
    ViewBag.Title = "Şehir Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>🏙️ Şehir Listesi</h2>
    <a href="/Manage/SehirEkle" class="btn btn-success">+ Yeni Şehir Ekle</a>
</div>

@if (TempData["Mesaj"] != null)
{
    <div class="alert alert-success">@TempData["Mesaj"]</div>
}

<table class="table table-hover table-bordered shadow-sm bg-white align-middle">
    <thead class="table-dark">
        <tr>
            <th>Resim</th>
            <th>Şehir Adı</th>
            <th>Nüfus</th>
            <th>Öne Çıkan</th>
            <th>Bilgi</th>
            <th style="width: 180px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ResimUrl" width="80" height="50" style="object-fit: cover; border-radius: 5px;" />
                </td>
                <td class="fw-bold">@item.SehirAdi</td>
                <td>@item.Nufus</td>
                <td>
                    <span class="badge bg-info text-dark">@item.OneCikan</span>
                </td>
                <td class="small text-muted">
                    @if (!string.IsNullOrEmpty(item.Bilgi) && item.Bilgi.Length > 50)
                    {
                        @item.Bilgi.Substring(0, 50)<text>...</text>
                    }
                    else
                    {
                        @item.Bilgi
                    }
                </td>
                <td>
                    <a href="/Manage/SehirDuzenle/@item.Id" class="btn btn-warning btn-sm text-white">Düzenle</a>
                    <a href="/Manage/SehirSil/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center">Henüz hiç şehir eklenmemiş.</div>
}