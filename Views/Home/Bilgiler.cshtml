@model InternetProg.Models.SiteVeriModeli
@{
    ViewBag.Title = "Etiyopya Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --eth-green: #009A44;
        --eth-yellow: #FEDD00;
        --eth-red: #D6001C;
        --text-dark: #333;
    }

    
    .grad-text {
        background: linear-gradient(90deg, var(--eth-green), #e6c200, var(--eth-red)); 
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 800;
        display: inline-block;
    }

  
    .section-title {
        font-weight: bold;
        color: #333; 
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px; 
    }

  
    .table-wrapper {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        margin-bottom: 40px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: linear-gradient(90deg, var(--eth-green) 0%, var(--eth-yellow) 50%, var(--eth-red) 100%);
    }

    th {
        color: white;
        padding: 18px;
        text-align: left;
        font-weight: 600;
        text-shadow: 0 1px 2px rgba(0,0,0,0.3);
    }

    td {
        padding: 15px 18px;
        border-bottom: 1px solid #eee;
        vertical-align: middle;
    }

    tbody tr:hover {
        background-color: #fcfcfc;
    }

    
    .city-img-container {
        position: relative;
        width: 70px;
        height: 70px;
        cursor: pointer;
    }

    .city-thumb {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 3px solid #eee;
        transition: transform 0.2s;
    }

    .city-large {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0.8);
        width: auto;
        max-width: 90vw; 
        height: auto;
        max-height: 80vh;
        object-fit: contain;
        border-radius: 8px;
        border: 5px solid white;
        box-shadow: 0 25px 50px rgba(0,0,0,0.5);
        z-index: 10000;
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }


    .city-img-container:hover::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.7); 
        backdrop-filter: blur(5px); 
        z-index: 9999;
        pointer-events: none;
    }

    .city-img-container:hover .city-large {
        display: block;
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }

    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 15px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 20px 15px;
        text-align: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        border-bottom: 4px solid var(--eth-yellow);
        transition: transform 0.2s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-value {
        font-size: 1.6rem;
        font-weight: 800;
        color: #333;
        margin-top: 5px;
        display: block;
    }

    .stat-label {
        color: #888;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

  
    .expand-wrapper {
        position: relative;
        height: 140px;
        margin-bottom: 30px;
        z-index: 5;
    }

    .expand-card {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        border-left: 6px solid var(--eth-green);
        height: 100%;
        overflow: hidden;
        transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
        cursor: default;
    }

    .expand-title-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .expand-icon {
        color: #ccc;
        transition: transform 0.3s;
    }

    .expand-text {
        display: block;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: #555;
        line-height: 1.6;
    }

    .expand-card:hover {
        height: auto;
        z-index: 99;
        box-shadow: 0 15px 40px rgba(0,0,0,0.15);
    }

        .expand-card:hover .expand-text {
            white-space: normal;
            overflow: visible;
        }

      
        .expand-card:hover .expand-icon {
            transform: rotate(180deg);
            color: var(--eth-green);
        }



    .tourist-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .tourist-item {
        display: flex;
        background: white;
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.04);
        border-left: 5px solid transparent;
        transition: all 0.3s ease;
        align-items: center;
    }

        .tourist-item:hover {
            transform: translateX(8px);
            border-left-color: var(--eth-red);
            box-shadow: 0 10px 20px rgba(0,0,0,0.08);
        }

    .tourist-img-box {
        width: 140px;
        height: 100px;
        flex-shrink: 0;
        border-radius: 8px;
        overflow: hidden;
        margin-right: 20px;
        background-color: #eee; 
    }

        .tourist-img-box img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    .tourist-item:hover .tourist-img-box img {
        transform: scale(1.1);
    }

    .tourist-header {
        display: flex;
        align-items: center;
        margin-bottom: 6px;
    }

    .tourist-bullet {
        width: 10px;
        height: 10px;
        background-color: var(--eth-green);
        border-radius: 50%;
        margin-right: 12px;
        display: inline-block;
    }

    .tourist-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin: 0;
    }

    .tourist-desc {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.5;
        margin: 0;
    }

    /* Mobil Uyum */
    @@media (max-width: 768px) {
        .tourist-item {
            flex-direction: column;
            align-items: flex-start;
        }

        .tourist-img-box {
            width: 100%;
            height: 180px;
            margin-right: 0;
            margin-bottom: 15px;
        }

        .expand-wrapper {
            height: 160px;
        }
       
    }
</style>

<div class="container mt-5 mb-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">
            <span class="grad-text">Etiyopya Hakkında Her Şey</span>
        </h1>
        <p class="lead text-secondary">Şehirler, demografik yapı ve görülmesi gereken yerler.</p>
        <hr class="w-25 mx-auto" style="border: 3px solid var(--eth-red); opacity: 1;">
    </div>

    <h2 class="section-title">
        🏙️ <span class="grad-text">Önemli Şehirler</span>
    </h2>

    <div class="table-wrapper">
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th style="width: 100px;">Görsel</th>
                        <th>Şehir Adı</th>
                        <th>Öne Çıkan</th>
                        <th>Detay</th>
                        <th>Nüfus</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SehirlerListesi != null)
                    {
                        foreach (var sehir in Model.SehirlerListesi)
                        {
                            <tr>
                                <td>
                                    <div class="city-img-container">
                                        <img src="@sehir.ResimUrl" class="city-thumb" alt="@sehir.SehirAdi">
                                        <img src="@sehir.ResimUrl" class="city-large" alt="@sehir.SehirAdi Büyük">
                                    </div>
                                </td>
                                <td class="fw-bold">@sehir.SehirAdi</td>
                                <td><span class="badge bg-warning text-dark">@sehir.OneCikan</span></td>
                                <td class="text-muted small">@sehir.Bilgi</td>
                                <td class="fw-bold text-success">@sehir.Nufus</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <hr class="my-5">

    <div class="row">
        <div class="col-md-7">
            <h2 class="section-title">
                📊 <span class="grad-text">Nüfus Gelişimi</span>
            </h2>
            <div class="stats-grid">
                @if (Model.NufusListesi != null)
                {
                    foreach (var nufus in Model.NufusListesi)
                    {
                        <div class="stat-card">
                            <span class="stat-label">@nufus.Yil YILI</span>
                            <span class="stat-value">@String.Format("{0:N0}", nufus.NufusSayisi)</span>
                        </div>
                    }
                }
            </div>
        </div>

        <div class="col-md-5">
            <h2 class="section-title">
                ℹ️ <span class="grad-text">Genel Bilgi</span>
            </h2>
            <div class="expand-wrapper">
                <div class="expand-card">
                    <div class="expand-title-row">
                        <h5 class="fw-bold text-success mb-0">Genç ve Dinamik Nüfus</h5>
                        <span class="expand-icon">▼</span>
                    </div>
                    <span class="expand-text">
                        Etiyopya, Afrika'nın en kalabalık ikinci ülkesi olup hızla büyüyen bir genç nüfusa sahiptir.
                        Nüfusun büyük çoğunluğu kırsal kesimde yaşasa da şehirleşme hızı giderek artmaktadır.
                        Ülke, 80'den fazla etnik grubu barındıran çok kültürlü bir yapıya sahiptir.
                    </span>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5">

    <h2 class="section-title">
        🌍 <span class="grad-text">Turistik Noktalar Listesi</span>
    </h2>

    <ul class="tourist-list">
        @if (Model.TuristikYerlerListesi != null)
        {
            foreach (var yer in Model.TuristikYerlerListesi)
            {
                <li class="tourist-item">
                    <div class="tourist-img-box">
                        <img src="@yer.ResimUrl" alt="@yer.YerAdi">
                    </div>
                    <div class="tourist-content">
                        <div class="tourist-header">
                            <span class="tourist-bullet"></span>
                            <h3 class="tourist-title">@yer.YerAdi</h3>
                        </div>
                        <p class="tourist-desc">@yer.Aciklama</p>
                    </div>
                </li>
            }
        }
    </ul>

</div>